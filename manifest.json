{
    "name":"Blocky",
    "version":"0.0.1",
    "manifest_version":2,
    "description":"Allows people to tag blocks of html inside web pages.",
    "icons":{
        "16":"images/icon16.png",
        "48":"images/icon48.png",
        "128":"images/icon128.png"
    },
    "background":{
        "persistent": false,
        "page": "background/background.html"
    },
    "browser_action":{
        "default_title":"Blocky",
        "default_icon":"images/icon48.png",
        "default_popup":"browser_action/popup.html"
    },
    "permissions":[
        "tabs",
        "storage",
        "downloads",
        "activeTab"
    ],
    "commands":{
        "toggle-blocky":{
            "suggested_key":{
                "default":"Ctrl+Q",
                "mac":"Command+Q"
            },
            "description":"Initiate blocky"
        }
    }
}